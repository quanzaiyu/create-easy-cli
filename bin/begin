#! /usr/bin/env node

const program = require('commander');
const { logPackageVersion } = require('../src/utils');

logPackageVersion();

/**
 * 格式一：node bin/begin
 * 格式二：node bin/begin init a projectName
 * 格式三：node bin/begin init a --name projectName --desc projectDescription
 *
 * 帮助：node bin/begin -h 或 node bin/begin --help
 * 帮助：node bin/begin init -h 或 node bin/begin init --help
 */
program
  .usage('<command> [options]')
  .command('init [name]', 'init a project')
  .parse(process.argv);
